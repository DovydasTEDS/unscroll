{
  "name": "unScroll",
  "description": "make you hate doomscrolling",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/unscroll128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://www.tiktok.com/*",
        "https://vm.tiktok.com/*",
        "https://tiktok.com/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "sites.json" ],
      "matches": [ "https://*/*" ]
    }
  ],
  "icons": {
  "16": "icons/unscroll16.png",
  "32": "icons/unscroll32.png",
  "48": "icons/unscroll48.png",
  "128": "icons/unscroll128.png"
  }
}